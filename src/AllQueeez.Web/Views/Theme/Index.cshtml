@model IEnumerable<ThemesViewModel>

@{
    ViewData["Title"] = "Themes";
}

<div class="wrapper">
    <div class="header">
        <div class="header-menu">
            <div class="title">All<span>Queez</span></div>
            <div class="sidebar-btn">
                <i class="fas fa-bars"></i>
            </div>
            <div class="logout-btn">
                <a asp-controller="Account" asp-action="Logout"><i class="fas fa-sign-out-alt"></i></a>
            </div>
        </div>
    </div>
    <div class="sidebar">
        <div class="sidebar-menu">
            <div class="profile">
                <img src="~/images/1.jpg" alt="">
                <p>Tkumwa</p>
            </div>
            <ul>
                <li class="item">
                    <a href="game" class="menu-btn">
                        <i class="fas fa-columns"></i><span>My queezes</span>
                    </a>
                </li>
                <li class="active-item">
                    <a href="theme" class="menu-btn">
                        <i class="fas fa-star"></i><span>Themes</span>
                    </a>
                </li>
                <li class="item">
                    <a href="question" class="menu-btn">
                        <i class="fas fa-question"></i><span>Questions</span>
                    </a>
                </li>
                <li class="item">
                    <a href="#" class="menu-btn">
                        <i class="fas fa-cog"></i><span>Settings</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="main-container">
        <div class="title-row">
            <span class="title">Themes</span>
            <a href="theme/create" class="create-btn">Add theme</a>
        </div>
        <div class="search">
            <i class="fas fa-search">
                <input type="text"
                       placeholder="Type in theme name"
                       onfocus="this.placeholder = ''"
                       onblur="this.placeholder = 'Type in theme name'">
            </i>
        </div>
        <table class="table-header">
            <thead>
                <tr>
                    <th width="80%">NAME</th>
                    <th width="20%">ACTIONS</th>
                </tr>
            </thead>
        </table>
        @foreach (var theme in Model)
        {
            <table class="table-row">
                <tbody>
                    <tr>
                        <td width="80%">@theme.Name</td>
                        <td width="20%">
                            <a href=""><i class="fas fa-pen"></i></a>
                            <a asp-controller="Theme" asp-action="Delete" asp-route-id="@theme.Id"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                </tbody>
            </table>
        }
    </div>
</div>

@section css {
    <link href="~/css/tables.css" rel="stylesheet" />
}