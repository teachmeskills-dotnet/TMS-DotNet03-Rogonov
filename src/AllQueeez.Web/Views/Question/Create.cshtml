@model QuestionActionsViewModel

@{
    ViewData["Title"] = "Add question";
}

<div class="wrapper">
    <div class="header">
        <div class="header-menu">
            <div class="title">All<span>Queez</span></div>
            <div class="sidebar-btn">
                <i class="fas fa-bars"></i>
            </div>
            <div class="logout-btn">
                <a asp-controller="Account" asp-action="Logout"><i class="fas fa-sign-out-alt"></i></a>
            </div>
        </div>
    </div>
    <div class="sidebar">
        <div class="sidebar-menu">
            <div class="profile">
                <img src="~/images/1.jpg" alt="">
                <p>Tkumwa</p>
            </div>
            <ul>
                <li class="item">
                    <a href="/game" class="menu-btn">
                        <i class="fas fa-columns"></i><span>My queezes</span>
                    </a>
                </li>
                <li class="item">
                    <a href="/theme" class="menu-btn">
                        <i class="fas fa-star"></i><span>Themes</span>
                    </a>
                </li>
                <li class="active-item">
                    <a href="/question" class="menu-btn">
                        <i class="fas fa-question"></i><span>Questions</span>
                    </a>
                </li>
                <li class="item">
                    <a href="#" class="menu-btn">
                        <i class="fas fa-cog"></i><span>Settings</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="main-container">
        <form method="post" asp-controller="question" asp-action="Create">
            <div class="title-row">
                <span class="title">Add question</span>
                <button type="submit" class="save">Save</button>
            </div>
            <div class="content">
                <div class="create-form">
                    <div class="form-row">
                        <label class="field-title">Question title:</label>
                        <div>
                            <input class="field"
                                   placeholder="Question title"
                                   onfocus="this.placeholder = ''"
                                   onblur="this.placeholder = 'Question title'" asp-for="Title">
                        </div>
                    </div>
                    <div class="form-row">
                        <label class="field-title">Description:</label>
                        <div>
                            <input class="field"
                                   placeholder="Description"
                                   onfocus="this.placeholder = ''"
                                   onblur="this.placeholder = 'Description'" asp-for="Description">
                        </div>
                    </div>
                    <div class="form-row">
                        <label class="field-title">Comment:</label>
                        <div>
                            <input class="field"
                                   placeholder="Comment"
                                   onfocus="this.placeholder = ''"
                                   onblur="this.placeholder = 'Comment'" asp-for="Comment">
                        </div>
                    </div>
                    <div class="form-row">
                        <label class="field-title">Answer:</label>
                        <div>
                            <input class="field"
                                   placeholder="Answer"
                                   onfocus="this.placeholder = ''"
                                   onblur="this.placeholder = 'Answer'" asp-for="Answer">
                        </div>
                    </div>                    
                    <div class="form-row">
                        <label class="field-title">Question type (TODO - implement autodeteсt or dropdown):</label>
                        <div>
                            <input class="field"
                                   placeholder="Question type"
                                   onfocus="this.placeholder = ''"
                                   onblur="this.placeholder = 'Question type'">
                        </div>
                    </div>
                    <div class="form-row">
                        <label class="field-title">Upload file (optional):</label>
                        <div>
                            <input class="field"
                                   placeholder="Upload file"
                                   onfocus="this.placeholder = ''"
                                   onblur="this.placeholder = 'Upload file'" asp-for="File">
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section css {
    <link href="~/css/create.css" rel="stylesheet" />
}
