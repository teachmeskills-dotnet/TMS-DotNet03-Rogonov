@model IEnumerable<QuestionsViewModel>

@{
    ViewData["Title"] = "Questions";
}

<a asp-controller="Question" asp-action="Create">Add question</a>

@if (Model.Any())
{
    foreach (var question in Model)
    {
        <div>@question.Id</div>
        <div>@question.Title</div>
        <div>@question.Description</div>
        <div>@question.Comment</div>
        <div>@question.File</div>
        <div>@question.Path</div>
        <div>@question.Answer</div>
        <form method="delete" asp-controller="Question" asp-action="Delete" asp-route-id="@question.Id">
            <button type="submit">Delete</button>
        </form>
    }
    <br />
}
else
{
    <div>Empty questions list</div>
}