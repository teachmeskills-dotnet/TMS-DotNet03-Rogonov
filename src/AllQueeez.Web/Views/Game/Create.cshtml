@model GameActionsViewModel

@{
    ViewData["Title"] = "Add Queez";
}

<div class="wrapper">
    <div class="header">
        <div class="header-menu">
            <div class="title">All<span>Queez</span></div>
            <div class="sidebar-btn">
                <i class="fas fa-bars"></i>
            </div>
            <div class="logout-btn">
                <a asp-controller="Account" asp-action="Logout"><i class="fas fa-sign-out-alt"></i></a>
            </div>
        </div>
    </div>
    <div class="sidebar">
        <div class="sidebar-menu">
            <div class="profile">
                <img src="~/images/1.jpg" alt="">
                <p>Tkumwa</p>
            </div>
            <ul>
                <li class="active-item">
                    <a href="/game" class="menu-btn">
                        <i class="fas fa-columns"></i><span>My queezes</span>
                    </a>
                </li>
                <li class="item">
                    <a href="/theme" class="menu-btn">
                        <i class="fas fa-star"></i><span>Themes</span>
                    </a>
                </li>
                <li class="item">
                    <a href="/question" class="menu-btn">
                        <i class="fas fa-question"></i><span>Questions</span>
                    </a>
                </li>
                <li class="item">
                    <a href="#" class="menu-btn">
                        <i class="fas fa-cog"></i><span>Settings</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="main-container">
        <div class="top-block">
            <form method="post" asp-controller="Game" asp-action="Create">
                <div class="title-row">
                    <span class="title">Add queez</span>
                    <button type="submit" class="save">Save</button>
                </div>
                <div class="content">
                    <div class="create-form">
                        <div class="form-row">
                            <label for="theme" class="field-title">Select theme or create a new one:</label>
                            <div class="select-container">
                                <div class="select-block">
                                    <select class="select" asp-for="ThemeId" asp-items="ViewBag.Themes"></select>
                                    <i class="fas fa-caret-down"></i>
                                </div>
                                <button onclick="addTheme()" type="button" class="add-new-theme-btn" data-toggle="modal">
                                    <i class="fas fa-plus-circle fa-2x"></i>
                                </button>
                            </div>
                        </div>
                        <div class="form-row">
                            <label class="field-title">Game title:</label>
                            <div>
                                <input class="field"
                                       placeholder="Game title"
                                       onfocus="this.placeholder = ''"
                                       onblur="this.placeholder = 'Game title'" asp-for="Title">
                            </div>
                        </div>
                        <div class="form-row">
                            <label class="field-title">Description:</label>
                            <div>
                                <input class="field"
                                       placeholder="Description"
                                       onfocus="this.placeholder = ''"
                                       onblur="this.placeholder = 'Description'" asp-for="Description">
                            </div>
                        </div>
                        <div class="form-row">
                            <label for="game-date" class="field-title">Game date:</label>
                            <div class="date">
                                <input class="field" placeholder="Select date" onfocus="(this.type='date')" onblur="(this.type='text')" asp-for="Date">
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <div>
                @await Html.PartialAsync("_AddThemePartial")
            </div>
        </div>
        <div class="bottom-block">
            <div class="header-row">Rounds:</div>
            <div class="rounds">
                <div id="another-round0" class="round-template">
                    <div class="round-header">
                        <div class="round-number">Round number.</div>
                        <div class="round-name">
                            <input type="text"
                                   class="round-name-field"
                                   placeholder="Type Round name"
                                   onfocus="this.placeholder=''"
                                   onblur="this.placeholder='Type Round name'" />
                        </div>
                    </div>
                    <table class="round-questions">
                        <thead>
                            <tr class="questions-header">
                                <th width="5%" class="row-number">#</th>
                                <th width="45%">Description</th>
                                <th width="45%">Answer</th>
                                <th width="5%"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr id="another-question0" class="another-question">
                                <td width="5%" class="row-number"></td>
                                <td width="45%" class="select-block">
                                    <select name="question" id="question-dropdown" class="select-question-dropdown"></select>
                                    <i class="fas fa-caret-down"></i>
                                </td>
                                <td width="45%">Answer</td>
                                <td width="5%" class="question-btns">
                                    <button id="add-question" class="add-another-question-btn" onclick="duplicateQuestion(this)" type="button">
                                        <i class="fas fa-plus-circle fa-2x"></i>
                                    </button>
                                    <button id="remove-question0" class="remove-another-question-btn" onclick="removeQuestion(this)" type="button">
                                        <i class="fas fa-minus-circle fa-2x"></i>
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="round-action-btns">
                        <button id="add-round" class="add-another-round-btn" onclick="duplicateRound()" type="button">
                            <i class="fas fa-plus fa-sm"></i>
                        </button>
                        <button id="remove-round0" class="remove-another-round-btn" onclick="removeRound(this)" type="button">
                            <i class="fas fa-minus fa-sm"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section css {
    <link href="~/css/create.css" rel="stylesheet" />
}

@section js {
    <script src="~/js/createGame.js"></script>
}