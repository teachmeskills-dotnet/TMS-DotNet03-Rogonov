@model GameActionsViewModel

@{
    ViewData["Title"] = "Add Queez";
}

<h1>Add new Queez</h1>

<form method="post" asp-controller="Game" asp-action="Create">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <select asp-for="ThemeId" asp-items="ViewBag.Themes"></select>
        <label asp-for="ThemeId"></label><br />
        <span asp-validation-for="ThemeId"></span>
    </div>
    <div>
        <label asp-for="Title"></label><br />
        <input asp-for="Title" />
        <span asp-validation-for="Title"></span>
    </div>
    <div>
        <label asp-for="Date"></label><br />
        <input asp-for="Date" type="date" />
        <span asp-validation-for="Date"></span>
    </div>
    <div>
        <button type="submit">Add</button>
    </div>
</form>
